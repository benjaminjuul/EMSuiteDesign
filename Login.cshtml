@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
      
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        By signing in, I agree to Ellab's Privacy Statement and Terms of Service.
                    </p>
                </div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="form-width-sm">
                    <div class="em-login-methods form-width">
                        <p id="js_ride_methods_title" class="em-login-methods_title">
                            <span>Or sign in with</span>
                        </p>
                        <div class="em-login-methods_list justify-between">
                            <a asp-controller="Wayf" asp-action="Index" role="button" aria-label="Sign in with SSO" class="em-login-methods_item">
                                <span class="em-login-methods_icon key">

                                </span>
                                SSO
                            </a>
                                     <a asp-controller="Wayf" asp-action="Index" role="button" aria-label="Sign in with SSO" class="em-login-methods_item">
                                <span class="em-login-methods_icon key">

                                </span>
                                Google
                            </a>
                                     <a href="" role="button" aria-label="Sign in with SSO" class="em-login-methods_item">
                                <span class="em-login-methods_icon key">

                                </span>
                                Facebook
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
